<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout style="@style/Album.MatchParent"
    android:background="@color/fondo_blanco"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<include layout="@layout/toolbar"/>-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:id="@+id/ll_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <cu.alexgi.youchat.views_GI.ImageViewBarGI
                    android:id="@+id/back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/arrow_left"
                    app:tint="@color/texto_negro_to_gris"/>
                <cu.alexgi.youchat.views_GI.TextViewBarGI
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GalerÃ­a"
                    android:textColor="@color/texto_negro_to_gris"
                    android:textSize="20sp" />
            </LinearLayout>
        </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/activity_list_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>