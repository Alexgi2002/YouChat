<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/preview_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground">

        <cu.alexgi.youchat.CircleImageView
            android:id="@+id/preview_contacto_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:civ_circle_background_color="@color/image_dialog_preview" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/user_verificado"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="-9dp"
        android:layout_toEndOf="@+id/preview_chat_item"
        android:padding="2dp"
        android:visibility="gone"
        android:src="@drawable/verified_profile"
        app:tint="?attr/colorAccent" />

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/contacto_nombre"
        android:text="Alex GI KK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/user_verificado"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textColor="@color/texto_negro_to_gris" />

    <TextView
        android:id="@+id/contacto_correo"
        android:text="alexgi@nauta.cu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacto_nombre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margen"
        android:layout_toEndOf="@+id/preview_chat_item"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textColor="@color/texto_grisoscuro_to_grisclaro"
        android:textSize="14sp" />
</RelativeLayout>