<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/background_mensaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:layout_marginStart="64dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sticker_der"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:lottie_repeatMode="restart"/>

            <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                android:id="@+id/sticker_empty"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="gone"
                android:padding="24dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@drawable/sticker_empty_focus" />
            <!--        app:lottie_repeatCount="2"-->
            <!--android:layout_marginEnd="8dp"-->

            <LinearLayout
                android:id="@+id/est_reenviado"
                android:layout_alignEnd="@+id/sticker_der"
                android:layout_alignBottom="@+id/sticker_der"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_mensaje_sticker">
                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    app:tint="@color/texto_blanco_to_gris"
                    android:src="@drawable/option_chat_reenviar"/>
                <TextView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reenviado"
                    android:maxLines="1"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/texto_blanco_to_gris"
                    android:textSize="@dimen/text_hora"/>
                <TextView
                    android:id="@+id/hora_der"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/texto_blanco_to_gris"
                    android:textSize="@dimen/text_hora" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/estadoImg"
                    android:tint="@color/texto_blanco_to_gris"
                    android:layout_width="@dimen/img_estado"
                    android:layout_height="@dimen/img_estado"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

