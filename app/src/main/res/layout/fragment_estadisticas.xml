<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    tools:context=".EstadisticasFragment">

    <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
        android:id="@+id/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:id="@+id/atras"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left"
            app:tint="@color/texto_negro_to_gris"/>
        <cu.alexgi.youchat.views_GI.TextViewBarGI
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:text="EstadÃ­sticas"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="@color/texto_negro_to_gris"/>

        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:id="@+id/iv_compartir_estadisticas"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/share_line"
            app:tint="@color/texto_negro_to_gris"/>

        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:id="@+id/iv_resetear_estadisticas"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/refresh_icon2"
            app:tint="@color/texto_negro_to_gris"/>
    </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>
    <cu.alexgi.youchat.views_GI.TabLayoutGI
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:tabTextColor="@color/texto_negro_to_gris"
        app:tabIconTint="?attr/colorAccent"
        app:tabIndicatorColor="?attr/colorAccent"
        app:tabSelectedTextColor="?attr/colorAccent"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorHeight="3dp"
        app:tabInlineLabel="true"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabPaddingBottom="4dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>