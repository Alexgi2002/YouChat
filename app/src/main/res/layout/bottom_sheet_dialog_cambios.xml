            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/texto_grisoscuro_to_grisclaro"
            android:layout_marginBottom="24dp"
            android:text="@string/cambio_4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
