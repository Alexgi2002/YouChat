            </RelativeLayout>-->
            <!--<LinearLayout
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal">-->
            <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                android:id="@+id/tv_usuarios_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/preview_chat_item"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/texto_negro_to_gris" />

            <!--     </LinearLayout>-->
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"




                android:gravity="center_vertical"
                android:orientation="horizontal">-->
                <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                    android:id="@+id/hora_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_usuarios_estado"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/preview_chat_item"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="1"
                    android:textColor="@color/texto_grisoscuro_to_grisclaro"
                    android:textSize="13sp" />
            <!--</LinearLayout>-->

            <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                android:id="@+id/img_admin_estado"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/deltachat_circle_touch_highlight_background"
                android:padding="10dp"
                android:src="@drawable/setting"
                app:tint="@color/texto_negro_to_gris" />

        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="16dp"
            android:alpha="0.5"
            android:background="#868c90" />
