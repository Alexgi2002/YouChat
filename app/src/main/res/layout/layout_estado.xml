                android:background="?attr/selectableItemBackground">-->

                <RelativeLayout
                    android:id="@+id/preview_chat_item"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true">

                    <cu.alexgi.youchat.CircleImageView
                        android:id="@+id/preview_estado_image"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_margin="4dp"
                        app:civ_circle_background_color="@color/texto_grisoscuro_to_grisclaro" />
                    <!--android:src="@drawable/plus_estado1"-->
                    <!--<RelativeLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"

                        android:layout_centerInParent="true">-->

                        <com.vanniktech.emoji.EmojiTextView
                            android:id="@+id/tv_contenido_estado"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_margin="4dp"
                            android:layout_centerInParent="true"
                            android:maxLines="5"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="6sp" />
                    <!--</RelativeLayout>-->


                    <ImageView
                        android:id="@+id/img_download"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_margin="4dp"
                        app:tint="#FFF"
                        android:src="@drawable/download"
                        android:padding="12dp"/>

                    <cu.alexgi.youchat.CircularStatusView
                        android:id="@+id/circular_status_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:portion_spacing="6dp"
                        app:portion_width="2dp"/>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressNowSubida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:indeterminate="false"
                        app:trackCornerRadius="4dp"/>

                    <!--<TextView
                        android:id="@+id/estados_cont"
