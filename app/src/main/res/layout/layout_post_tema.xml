<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/fondo_msg_post"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <cu.alexgi.youchat.views_GI.CardViewGI
            android:id="@+id/fondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:cardElevation="5dp"
            app:cardCornerRadius="13dp"
            app:contentPadding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical">
                        <cu.alexgi.youchat.views_GI.TextViewFontResGI
                            android:id="@+id/nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                            android:id="@+id/correo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLines="1"
                            android:textSize="13sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                                android:id="@+id/hora"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:id="@+id/user_type"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginEnd="3dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="3dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/theme_card"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent"
                        app:cardElevation="0dp"
                        app:strokeColor="#CCC"
                        app:strokeWidth="0.8dp"
                        app:cardBackgroundColor="@color/gris_perfecto">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/img_fondo_style_theme"
                                android:layout_alignTop="@+id/theme_view"
                                android:layout_alignBottom="@+id/theme_view"
                                android:layout_alignStart="@+id/theme_view"
                                android:layout_alignEnd="@+id/theme_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />
                            <View
                                android:layout_alignTop="@+id/theme_view"
                                android:layout_alignBottom="@+id/theme_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:background="#0D000000"/>
                            <RelativeLayout
                                android:id="@+id/theme_view"
                                android:background="@color/invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp">
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/theme_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    app:cardElevation="0dp"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                                    app:strokeWidth="0.2dp"
                                    app:strokeColor="@color/gris_perfecto"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/theme_msg_izq"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@id/theme_bar"
                                    android:layout_marginStart="2dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/desing_bubble_in" />
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/theme_msg_der"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@id/theme_msg_izq"
                                    android:layout_marginEnd="2dp"
                                    android:layout_gravity="end"
                                    android:src="@drawable/desing_bubble_out"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/theme_radio"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_below="@id/theme_msg_der"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="3dp"
                                    android:padding="2dp"
                                    android:src="@drawable/radio_button_checked" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tema_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/theme_card"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"/>

                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tema_creador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/theme_card"
                        android:layout_below="@+id/tema_nombre"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fondo_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tema_creador"
                        android:layout_below="@id/tema_creador"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardElevation="0dp"
                        app:contentPadding="6dp"
                        app:strokeWidth="2dp">
                        <TextView
                            android:id="@+id/theme_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:letterSpacing="0.1"
                            android:text="AGREGAR"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

                <cu.alexgi.youchat.views_GI.TextViewPostGI
                    android:id="@+id/mensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"/>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/view_post_options"/>
            </LinearLayout>
        </cu.alexgi.youchat.views_GI.CardViewGI>
    </LinearLayout>
</RelativeLayout>