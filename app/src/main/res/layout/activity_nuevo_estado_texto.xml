<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_view_neta"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoEstadoTextoActivity">

    <RelativeLayout
        android:id="@+id/menu_color_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_blanco">

        <ImageView
            android:id="@+id/input_color_fondo_estado_salir"
            android:padding="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:tint="@color/texto_grisoscuro_to_grisclaro"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/send_error" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/color_fondo_estado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/color_picker_item_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/degradado_fondo_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layout_toStartOf="@+id/color_fondo_estado">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fondo_estado_texto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="60dp">
            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/et_texto_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="501"
                android:hint="Escriba algo..."
                android:inputType="textCapSentences|textMultiLine"
                android:textColorHint="@color/gris"
                android:textColor="#fff"
                android:background="@color/invisible"
                android:textAlignment="center"
                android:layout_centerInParent="true" />
            <!--android:inputType="text"-->
            <!--android:textSize="40sp"-->

        </RelativeLayout>


        <cu.alexgi.youchat.views_GI.FABGI
            android:id="@+id/fab_publicar_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            app:srcCompat="@drawable/input_send"
            app:fabCustomSize="50dp"
            app:backgroundTint="?attr/colorAccent"
            app:tint="#fff"
            app:maxImageSize="30dp"/>

        <ImageView
            android:id="@+id/input_color_fondo_estado"
            android:padding="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/deltachat_circle_touch_highlight_background"
            android:src="@drawable/ic_photo_filter" />

        <ImageView
            android:id="@+id/input_emoji_estado"
            android:padding="9dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#fff"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/input_color_fondo_estado"
            android:background="@drawable/deltachat_circle_touch_highlight_background"
            android:src="@drawable/emoji" />

        <ImageView
            android:id="@+id/input_change_font"
            android:padding="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#fff"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/input_emoji_estado"
            android:background="@drawable/deltachat_circle_touch_highlight_background"
            android:src="@drawable/msg_text_outlined" />

    </RelativeLayout>
</RelativeLayout>