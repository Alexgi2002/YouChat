<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/background_mensaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
                android:id="@+id/fondo_mensaje_der"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="32dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="13dp"
                app:cardBackgroundColor="#2BB0E6"
                app:contentPadding="18dp">

                <RelativeLayout
                    android:id="@+id/fondo_hora_der"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/mensaje_der"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:textColorLink="@color/texto_blanco_to_gris"
                        android:autoLink="all"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="26sp" />
                    <TextView
                        android:text="10:00 am"
                        android:id="@+id/hora_der"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mensaje_der"
                        android:layout_toStartOf="@id/estadoText"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="6dp"
                        android:maxLines="1"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_hora" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:tint="#fff"
                        android:id="@+id/estadoText"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/img_estado"
                        android:layout_height="@dimen/img_estado"
                        android:layout_below="@+id/mensaje_der"
                        android:layout_alignEnd="@+id/mensaje_der"
                        android:layout_marginEnd="4dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
