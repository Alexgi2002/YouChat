<?xml version="1.0" encoding="utf-8"?>
<cu.alexgi.youchat.views_GI.CardViewDialogGI
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fondo_blanco"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="265dp">
            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:src="@drawable/profile_white"
                android:background="@color/image_dialog_preview"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="265dp">
                <LinearLayout
                    android:id="@+id/contenedor_preview_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_alignParentTop="true"
                    android:background="#66000000">

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/preview_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="@color/texto_blanco_to_gris" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:tint="@color/texto_blanco_to_gris"
                            android:src="@drawable/star"/>
                        <TextView
                            android:id="@+id/cant_seguidores_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="43"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:textColor="@color/texto_blanco_to_gris"/>
                    </LinearLayout>
                </LinearLayout>

                <com.vanniktech.emoji.EmojiEditText
                    android:id="@+id/preview_infotext"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/contenedor_preview_nombre"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:focusable="false"
                    android:clickable="false"
                    android:textIsSelectable="false"
                    android:enabled="false"
                    android:hint="@string/info_perfil"
                    android:textSize="15sp"
                    android:textColorHint="@color/texto_blanco_to_gris"
                    android:textColor="@color/texto_blanco_to_gris"
                    android:background="#99000000"/>
            </RelativeLayout>
        </RelativeLayout>

        <cu.alexgi.youchat.views_GI.CardViewDialogGI
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:id="@+id/preview_chat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    app:tint="@color/texto_negro_to_gris"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/chat" />
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:id="@+id/preview_anclar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    app:tint="@color/texto_negro_to_gris"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/anclar" />
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:id="@+id/preview_info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    app:tint="@color/texto_negro_to_gris"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/info_circle" />
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:id="@+id/preview_perfil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    app:tint="@color/texto_negro_to_gris"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/profile" />
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:id="@+id/preview_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    app:tint="@color/texto_negro_to_gris"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/delete" />
            </LinearLayout>
        </cu.alexgi.youchat.views_GI.CardViewDialogGI>


        <cu.alexgi.youchat.views_GI.CardViewDialogGI
            android:id="@+id/layout_eliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">
            <TextView
                android:id="@+id/button_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground"
                android:textSize="13sp"
                android:textColor="@color/toast_rojo"
                android:text="ELIMINAR"/>
        </cu.alexgi.youchat.views_GI.CardViewDialogGI>
    </LinearLayout>
</cu.alexgi.youchat.views_GI.CardViewDialogGI>
