<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".WelcomePerfilActivity">

    <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <cu.alexgi.youchat.views_GI.TextViewBarGI
            android:id="@+id/text_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/texto_negro_to_gris"
            android:textSize="20sp"/>
    </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nesteScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="75dp"
            android:orientation="vertical">

            <cu.alexgi.youchat.views_GI.CardViewGI
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cu.alexgi.youchat.CircleImageView
                        android:id="@+id/imagen_perfil"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_centerHorizontal="true"
                        app:civ_border_width="2dp"
                        app:civ_circle_background_color="@color/image_dialog_preview"
                        android:src="@drawable/profile_white"/>

                    <cu.alexgi.youchat.views_GI.FABGI
                        android:id="@+id/fab_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/imagen_perfil"
                        android:layout_alignBottom="@id/imagen_perfil"
                        app:backgroundTint="?attr/colorAccent"
                        app:srcCompat="@drawable/camera"
                        app:tint="#fff"
                        app:fabCustomSize="45dp"
                        app:maxImageSize="28dp"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edit_alias_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imagen_perfil"
                        android:layout_margin="@dimen/margen"
                        app:boxBackgroundMode="outline"

                        android:background="@null"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                        app:hintEnabled="false"
                        android:nextFocusDown="@id/pass"
                        app:hintTextColor="@color/texto_grisoscuro_to_grisclaro"
                        app:startIconDrawable="@drawable/input_alias"
                        app:startIconCheckable="true"
                        app:startIconTint="@color/texto_negro_to_gris">
                        <com.vanniktech.emoji.EmojiEditText
                            android:id="@+id/text_alias_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="45dp"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:inputType="textPersonName"
                            android:imeOptions="actionDone"
                            android:textColor="@color/texto_negro_to_gris"
                            android:textColorHint="@color/texto_grisoscuro_to_grisclaro"
                            android:hint="Alias"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
            </cu.alexgi.youchat.views_GI.CardViewGI>

            <cu.alexgi.youchat.views_GI.CardViewGI
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <cu.alexgi.youchat.views_GI.TextViewFontResGI
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:text="Configuración inicial:" />
                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">
                        <cu.alexgi.youchat.views_GI.RadioButtonGI
                            android:id="@+id/radio_baja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:padding="8dp"
                            android:textSize="15sp"
                            android:text="Modo Ahorro"
                            android:maxLines="1"/>
                        <cu.alexgi.youchat.views_GI.RadioButtonGI
                            android:id="@+id/radio_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:padding="8dp"
                            android:textSize="15sp"
                            android:text="Modo Estándar"
                            android:maxLines="1"/>
                        <cu.alexgi.youchat.views_GI.RadioButtonGI
                            android:id="@+id/radio_alta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:padding="8dp"
                            android:textSize="15sp"
                            android:text="Modo Completo"
                            android:maxLines="1"/>
                    </RadioGroup>

                    <!--<cu.alexgi.youchat.views_GI.SliderGI
                        android:id="@+id/seekBar_conf_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        android:stepSize="1"
                        android:valueFrom="1"
                        android:valueTo="3"
                        app:haloRadius="0dp"
                        app:thumbElevation="4dp"/>-->
                </LinearLayout>
            </cu.alexgi.youchat.views_GI.CardViewGI>

            <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                android:id="@+id/tv_desc_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margen"
                android:layout_marginStart="@dimen/margen"
                android:layout_marginBottom="@dimen/margen"
                android:layout_marginTop="5dp"
                android:textSize="13sp"/>

            <cu.alexgi.youchat.views_GI.CardViewGI
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <cu.alexgi.youchat.views_GI.TextViewFontResGI
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:text="Copia de seguridad:" />
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_carg_bd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margen"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginBottom="@dimen/margen"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/info_circle"
                        android:drawablePadding="8dp"
                        android:textSize="15sp"
                        android:hint="Toque para verificar si existe alguna copia de seguridad para cargar"/>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/efab_verificar_bd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardElevation="0dp"
                        app:contentPadding="8dp"
                        app:strokeWidth="2dp">
                        <TextView
                            android:id="@+id/btn_verificar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:letterSpacing="0.1"
                            android:text="Verificar"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/efab_cargar_bd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardElevation="0dp"
                        app:contentPadding="8dp"
                        app:strokeWidth="2dp">
                        <TextView
                            android:id="@+id/btn_cargar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:letterSpacing="0.1"
                            android:text="Cargar"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </cu.alexgi.youchat.views_GI.CardViewGI>

            <cu.alexgi.youchat.views_GI.CardViewGI
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <cu.alexgi.youchat.views_GI.TextViewFontResGI
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:text="Bandeja de entrada:" />
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progres_cir_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        app:trackCornerRadius="6dp"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_bandeja_ent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margen"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginBottom="@dimen/margen"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:textAlignment="center" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/efab_reintentar_be"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardElevation="0dp"
                        app:contentPadding="8dp"
                        app:strokeWidth="2dp">
                        <TextView
                            android:id="@+id/btn_reintentar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:letterSpacing="0.1"
                            android:text="Reintentar"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/efab_vaciar_be"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardElevation="0dp"
                        app:contentPadding="8dp"
                        app:strokeWidth="2dp">
                        <TextView
                            android:id="@+id/btn_vaciar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:letterSpacing="0.1"
                            android:text="Vaciar bandeja"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </cu.alexgi.youchat.views_GI.CardViewGI>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <cu.alexgi.youchat.views_GI.FABGI
        android:id="@+id/btn_editar_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="?attr/colorAccent"
        app:srcCompat="@drawable/login"
        app:tint="#fff"
        app:fabCustomSize="55dp"/>

</RelativeLayout>