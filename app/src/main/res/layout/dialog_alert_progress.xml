<?xml version="1.0" encoding="utf-8"?>
<cu.alexgi.youchat.views_GI.CardViewDialogGI
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="@dimen/margen"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <ProgressBar
            android:id="@+id/bar"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:progressTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
            android:id="@+id/texto_alerta"
            android:layout_toEndOf="@+id/bar"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Enviando solicitud..."
            android:textSize="16dp"
            android:textColor="@color/texto_negro_to_gris"/>
    </RelativeLayout>
</cu.alexgi.youchat.views_GI.CardViewDialogGI>