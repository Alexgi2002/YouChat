<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modalBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/separator"
            android:orientation="horizontal"
            android:layout_width="@dimen/separatorX"
            android:layout_height="@dimen/separatorY"
            android:layout_gravity="center"
            android:background="@drawable/shape_item_search"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"/>

        <RelativeLayout
            android:id="@+id/fondo_msg_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lllll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <cu.alexgi.youchat.views_GI.CardViewGI
                    android:id="@+id/fondo_mensaje_izq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="13dp"
                    app:contentPadding="6dp">

                    <LinearLayout
                        android:id="@+id/fondo_hora_der"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/foto_noti"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:padding="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <cu.alexgi.youchat.views_GI.TextViewFontResGI
                                        android:id="@+id/nombre_noti"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:maxLines="1"
                                        android:textSize="14sp"/>
                                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                                        android:id="@+id/correo_noti"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:maxLines="1"
                                        android:textSize="13sp"/>
                                </LinearLayout>
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/user_type"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:visibility="gone"
                                    android:padding="2dp"
                                    android:layout_marginEnd="3dp"/>
                            </LinearLayout>
                            <!--<View
                                android:layout_width="match_parent"
                                android:layout_height="0.6dp"
                                android:layout_marginEnd="@dimen/margen"
                                android:alpha="0.5"
                                android:background="#868c90" />-->
                            <cu.alexgi.youchat.views_GI.TextViewPostGI
                                android:id="@+id/mensaje_noti"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                                android:id="@+id/hora_noti"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:maxLines="1"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </cu.alexgi.youchat.views_GI.CardViewGI>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:alpha="0.5"
            android:background="#868c90"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen"
            android:background="@null"
            style="?attr/colorAccent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:boxBackgroundMode="outline"
            app:hintTextColor="@color/texto_grisoscuro_to_grisclaro"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:counterEnabled="true"
            app:counterTextColor="@color/texto_grisoscuro_to_grisclaro"
            app:counterMaxLength="500"
            app:counterOverflowTextColor="@color/toast_rojo">
            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:hint="Mensaje"
                android:padding="8dp"
                android:maxLines="5"
                android:textColorHint="@color/texto_grisoscuro_to_grisclaro"
                android:textColor="@color/texto_negro_to_gris"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <cu.alexgi.youchat.views_GI.ExtendedFABGI
            android:id="@+id/aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen"
            android:textAlignment="center"
            app:backgroundTint="?attr/colorAccent"
            android:textColor="@color/texto_blanco_to_gris"
            android:textSize="@dimen/size_text_button"
            android:text="ENVIAR"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>