<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicarPostFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <cu.alexgi.youchat.views_GI.ImageViewBarGI
                    android:id="@+id/ir_atras"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/send_error"
                    app:tint="@color/texto_negro_to_gris"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <cu.alexgi.youchat.views_GI.TextViewBarGI
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Nuevo Post"/>
                    <cu.alexgi.youchat.views_GI.TextViewBarGI
                        android:id="@+id/txt_cant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="13sp"/>
                </LinearLayout>

                <cu.alexgi.youchat.views_GI.ImageViewBarGI
                    android:id="@+id/btn_send"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/send"
                    app:tint="@color/texto_negro_to_gris"/>
            </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/margen"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">
<!--                <cu.alexgi.youchat.CircleImageView-->
<!--                    android:id="@+id/img_perfil"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"/>-->
                <ImageView
                    android:id="@+id/icon_perfil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/noti1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_correo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:id="@+id/emoji"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/emoji"
                        android:padding="6dp"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_cant_letra_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="9sp"
                        android:text="000/500"
                        android:textColor="@color/texto_negro_to_gris"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header">
                <LinearLayout
                    android:id="@+id/edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical">

                    <cu.alexgi.youchat.views_GI.EditTextFontGenGI
                        android:id="@+id/input_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@null"
                        android:maxLength="500"
                        android:inputType="textMultiLine|textCapSentences"
                        android:textColorHint="@color/texto_grisoscuro_to_grisclaro"
                        android:textColor="@color/texto_negro_to_gris"
                        android:hint="¿Qué estás pensando?"
                        android:textSize="21sp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margen"
                        android:layout_below="@+id/edit_info"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay10Percent"/>
                            <TextView
                                android:id="@+id/tv_tam_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:layout_margin="4dp"
                                android:textColor="#fff"
                                android:textSize="10sp"
                                android:layout_alignBottom="@id/image"
                                android:layout_alignEnd="@id/image"
                                android:background="@drawable/shape_mensaje_fecha"/>
                            <ImageView
                                android:id="@+id/btn_delete"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="4dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/shape_mensaje_fecha"
                                android:src="@drawable/send_error"
                                android:layout_alignEnd="@+id/image"
                                android:layout_alignTop="@+id/image"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_tema"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margen"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_below="@+id/edit_info"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/theme_card"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent"
                                app:cardElevation="0dp"
                                app:strokeColor="#CCC"
                                app:strokeWidth="0.8dp"
                                app:cardBackgroundColor="@color/gris_perfecto">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/img_fondo_style_theme"
                                        android:layout_alignTop="@+id/theme_view"
                                        android:layout_alignBottom="@+id/theme_view"
                                        android:layout_alignStart="@+id/theme_view"
                                        android:layout_alignEnd="@+id/theme_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />
                                    <View
                                        android:layout_alignTop="@+id/theme_view"
                                        android:layout_alignBottom="@+id/theme_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="3dp"
                                        android:background="#0D000000"/>
                                    <RelativeLayout
                                        android:id="@+id/theme_view"
                                        android:background="@color/invisible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="3dp">
                                        <com.google.android.material.card.MaterialCardView
                                            android:id="@+id/theme_bar"
                                            android:layout_width="match_parent"
                                            android:layout_height="8dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            app:cardElevation="0dp"
                                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                                            app:strokeWidth="0.2dp"
                                            app:strokeColor="@color/gris_perfecto"/>
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/theme_msg_izq"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_alignParentStart="true"
                                            android:layout_below="@id/theme_bar"
                                            android:layout_marginStart="2dp"
                                            android:layout_gravity="start"
                                            android:src="@drawable/desing_bubble_in" />
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/theme_msg_der"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_below="@id/theme_msg_izq"
                                            android:layout_marginEnd="2dp"
                                            android:layout_gravity="end"
                                            android:src="@drawable/desing_bubble_out"/>
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/theme_radio"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_below="@id/theme_msg_der"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="3dp"
                                            android:padding="2dp"
                                            android:src="@drawable/radio_button_checked" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                                android:id="@+id/tema_nombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/theme_card"
                                android:layout_marginStart="8dp"
                                android:textSize="15sp"/>

                            <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                                android:id="@+id/tema_creador"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/theme_card"
                                android:layout_below="@+id/tema_nombre"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="8dp"
                                android:textSize="15sp"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/fondo_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/tema_creador"
                                android:layout_below="@id/tema_creador"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#00FFFFFF"
                                app:cardElevation="0dp"
                                app:contentPadding="6dp"
                                app:strokeWidth="2dp">
                                <TextView
                                    android:id="@+id/theme_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="6dp"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:letterSpacing="0.1"
                                    android:text="QUITAR"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"/>
                            </com.google.android.material.card.MaterialCardView>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tarjeta"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margen"
                        android:layout_below="@+id/edit_info"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="8dp">
                        <cu.alexgi.youchat.views_GI.TextViewFontResGI
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="15sp"
                            android:text="Vista previa:"/>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="13dp">
                            <RelativeLayout
                                android:id="@+id/background_tarjeta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.vanniktech.emoji.EmojiTextView
                                    android:id="@+id/tv_tarjeta"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_below="@id/lottie_arriba"
                                    android:layout_toEndOf="@id/lottie_izquierda"
                                    android:layout_toStartOf="@+id/lottie_derecha"
                                    android:textAlignment="center"
                                    android:padding="8dp"
                                    android:textColor="#fff"/>
                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_arriba"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_margin="6dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"/>
                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_abajo"
                                    android:visibility="gone"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_margin="6dp"
                                    android:layout_below="@id/tv_tarjeta"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"/>
                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_izquierda"
                                    android:visibility="gone"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_margin="6dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"/>
                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_derecha"
                                    android:visibility="gone"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_margin="6dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>
                                <ImageView
                                    android:id="@+id/btn_delete_tarjeta"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="4dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@drawable/shape_mensaje_fecha"
                                    android:src="@drawable/send_error"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <cu.alexgi.youchat.views_GI.TextViewFontResGI
                            android:id="@+id/cambiar_fondo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen"
                            android:layout_marginEnd="@dimen/margen"
                            android:layout_marginTop="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:textSize="15sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Cambiar color fondo"/>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical">
                            <cu.alexgi.youchat.views_GI.TextViewFontResGI
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margen"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:text="Posición sticker:"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/pos_lot_arriba"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/arrow_up_2"
                                    android:padding="6dp"/>
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/pos_lot_abajo"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/arrow_down_2"
                                    android:padding="6dp"/>
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/pos_lot_izquierda"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/arrow_left_2"
                                    android:padding="6dp"/>
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/pos_lot_derecha"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/arrow_right_2"
                                    android:padding="6dp"/>
                                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                                    android:id="@+id/pos_ninguna"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/send_error"
                                    android:padding="6dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <cu.alexgi.youchat.views_GI.TextViewFontResGI
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margen"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:text="Elegir sticker:"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/lista_sticker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/coordinate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <cu.alexgi.youchat.views_GI.TextViewBarGI
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:text="Agrega a tu Post"
                        android:textColor="@color/texto_negro_to_gris"/>
                    <cu.alexgi.youchat.views_GI.ImageViewBarGI
                        android:id="@+id/arrow_up"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/arrow_up_2"/>
                </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>

                <LinearLayout
                    android:id="@+id/btn_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/noti1"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Escoja ícono del post"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_tema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:src="@drawable/option_fondo"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Compartir tema"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="-1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_tarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:src="@drawable/document"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Crear tarjeta"/>
