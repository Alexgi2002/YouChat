<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cu.alexgi.youchat.views_GI.CardViewGI
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:cardBackgroundColor="@color/fondo_blanco"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:contentPadding="8dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <cu.alexgi.youchat.CircleImageView
                android:id="@+id/preview_image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                app:civ_circle_background_color="@color/image_dialog_preview" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/tv_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/texto_negro_to_gris"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_subida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="@color/texto_negro_to_gris"
                        android:drawableStart="@drawable/arrow_up_2"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/texto_negro_to_gris"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:id="@+id/tv_bajada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="@color/texto_negro_to_gris"
                        android:drawableStart="@drawable/arrow_down_2"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/texto_negro_to_gris"/>
                </LinearLayout>
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="@color/texto_negro_to_gris"/>
            </LinearLayout>
        </LinearLayout>
    </cu.alexgi.youchat.views_GI.CardViewGI>
</RelativeLayout>