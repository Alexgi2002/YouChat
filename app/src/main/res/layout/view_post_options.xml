<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/contenedor_option_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
            android:id="@+id/tv_cant_comentario_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:maxLines="1"
            android:text="5 comentarios:"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:alpha="0.5"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:background="@color/mensaje_derecho" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_cp_responder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/option_chat_answer"/>
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="Responder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_cp_comentar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/chat"/>
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="Comentar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_cp_compartir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/option_chat_reenviar"/>
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="Compartir" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:alpha="0.5"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:background="@color/mensaje_derecho" />

        <LinearLayout
            android:id="@+id/contenedor_comentario_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:visibility="visible"
            android:visibility="gone"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/contenedor_lista_comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista_comentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_post_comentario"/>
            </FrameLayout>

            <cu.alexgi.youchat.views_GI.TextViewFontResGI
                android:id="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_typping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <cu.alexgi.youchat.CircleImageView
                android:id="@+id/preview_contacto_mi_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:padding="3dp"
                android:src="@drawable/profile_white"
                app:civ_circle_background_color="@color/image_dialog_preview" />

            <cu.alexgi.youchat.views_GI.CardViewBarChatGI
                android:id="@+id/input_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                app:contentPaddingTop="3dp"
                app:contentPaddingBottom="3dp"
                app:contentPaddingRight="5dp"
                app:contentPaddingLeft="5dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/recording_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <cu.alexgi.youchat.views_GI.ImageViewBarChatGI
                            android:id="@+id/input_emoji"
                            android:layout_weight="0"
                            android:padding="8dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/deltachat_circle_touch_highlight_background"
                            android:src="@drawable/emoji"
                            app:tint="@color/texto_negro_to_gris"/>

                        <com.vanniktech.emoji.EmojiEditText
                            android:id="@+id/input_text"
                            android:scrollbars="vertical"
                            android:background="@null"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:minHeight="40dp"
                            android:maxLength="500"
                            android:textColor="@color/texto_negro_to_gris"
                            android:textColorHint="@color/texto_gris"
                            android:inputType="textCapSentences|textMultiLine"
                            android:imeOptions="actionDone"
                            android:maxLines="4"
                            android:hint="Comentario..."/>
                    </LinearLayout>
                </LinearLayout>
            </cu.alexgi.youchat.views_GI.CardViewBarChatGI>

            <cu.alexgi.youchat.views_GI.CardViewButtonGI
                android:id="@+id/input_estado_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:translationZ="2dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:cardElevation="3dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="12dp"
                    android:src="@drawable/input_send" />

            </cu.alexgi.youchat.views_GI.CardViewButtonGI>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>