<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddThemeFragment">
    <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:id="@+id/atras"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left"
            app:tint="@color/texto_negro_to_gris"/>
        <cu.alexgi.youchat.views_GI.TextViewBarGI
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:text="Nuevo tema"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="@color/texto_negro_to_gris"/>
        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/msg_text_outlined"
            app:tint="@color/texto_negro_to_gris"/>
        <cu.alexgi.youchat.views_GI.ImageViewBarGI
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/option_fondo"
            app:tint="@color/texto_negro_to_gris"/>
    </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>

