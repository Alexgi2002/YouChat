<?xml version="1.0" encoding="utf-8"?>
<cu.alexgi.youchat.views_GI.CardViewDialogGI
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fondo_blanco"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/icono_fiesta"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
            android:id="@+id/text_icono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/texto_negro_to_gris"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
            android:id="@+id/text_fiesta"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginEnd="@dimen/margen"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/texto_grisoscuro_to_grisclaro"/>
        <cu.alexgi.youchat.views_GI.TextViewBtnGI
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:textAllCaps="true"
            android:textSize="@dimen/size_text_button"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="8dp"
            android:textColor="?attr/colorAccent" />
    </LinearLayout>
</cu.alexgi.youchat.views_GI.CardViewDialogGI>
