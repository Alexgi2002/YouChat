        android:layout_marginBottom="4dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="4dp"
        app:cardElevation="3dp"
        android:clickable="true"
        android:translationZ="2dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent">

        <cu.alexgi.youchat.chatUtils.AnimatingToggle
            android:id="@+id/button_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/imageAudio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                app:tint="#fff"
                android:src="@drawable/voice" />

            <cu.alexgi.youchat.chatUtils.SendButton
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:contentDescription="@string/menu_send"
                android:nextFocusLeft="@+id/embedded_text_editor"
                android:src="@drawable/send"
                android:layout_marginStart="-4dp"
                android:tint="@color/texto_blanco_to_gris"
                android:rotation="45"
                android:background="@drawable/deltachat_circle_touch_highlight_background" />
        </cu.alexgi.youchat.chatUtils.AnimatingToggle>
    </cu.alexgi.youchat.views_GI.CardViewButtonGI>

    <cu.alexgi.youchat.views_GI.CardViewButtonGI
        android:id="@+id/imageViewStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:translationZ="2dp"
        android:visibility="gone"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/imageStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/input_send" />

    </cu.alexgi.youchat.views_GI.CardViewButtonGI>

</FrameLayout>
