    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutLock"
        android:layout_width="56dp"
        android:layout_height="180dp"
        android:visibility="gone"
        android:layout_gravity="end|bottom"
        android:layout_margin="4dp"
        android:translationZ="2dp"
        app:cardBackgroundColor="@color/fondo_blanco"
        app:cardCornerRadius="28dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewLock"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:tint="@color/texto_grisoscuro_to_grisclaro"
                android:padding="18dp"
                android:src="@drawable/ic_lock" />
            <ImageView
                android:id="@+id/imageViewLockArrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/texto_grisoscuro_to_grisclaro"
                android:layout_marginTop="-8dp"
                android:rotation="90"
                android:src="@drawable/arrow_left_2" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <cu.alexgi.youchat.views_GI.CardViewButtonGI
        android:id="@+id/layoutStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:cardElevation="3dp">
        <ImageView
            android:id="@+id/stop_audio_rec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:contentDescription="stop audio"
            android:src="@drawable/audio_stop"/>
    </cu.alexgi.youchat.views_GI.CardViewButtonGI>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"
        app:cardBackgroundColor="@color/temaRojoAccent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:cardElevation="3dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            app:tint="#FFF"
            android:contentDescription="borrar audio"
            android:src="@drawable/delete"/>
    </com.google.android.material.card.MaterialCardView>

    <cu.alexgi.youchat.views_GI.CardViewButtonGI
