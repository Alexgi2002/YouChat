                android:layout_marginEnd="88dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:text="CANCELAR"
                android:textColor="?attr/colorAccent"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/layoutSlideCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical|end"
                android:layout_marginEnd="88dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/texto_grisoscuro_to_grisclaro"
                    android:src="@drawable/arrow_left_2" />

                <TextView
                    android:id="@+id/textViewSlide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slide_to_cancel"
                    android:textColor="@color/texto_grisoscuro_to_grisclaro"
                    android:textSize="14sp" />

