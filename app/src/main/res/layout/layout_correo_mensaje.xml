<?xml version="1.0" encoding="utf-8"?>
    <cu.alexgi.youchat.views_GI.LinearLayoutUserGI
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_usuario_seleccionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <RelativeLayout
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <cu.alexgi.youchat.CircleImageView
                android:id="@+id/icon_email"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/mail_download"
                app:civ_border_width="8dp"/>

            <cu.alexgi.youchat.views_GI.CardViewButtonGI
                android:id="@+id/viewBackground"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:cardBackgroundColor="?attr/colorAccent"
                app:strokeWidth="2dp"
                app:strokeColor="#FFF"
                android:layout_alignEnd="@id/icon_email"
                android:layout_alignBottom="@id/icon_email"/>

            <LinearLayout
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/favorito"
                android:layout_toEndOf="@id/icon_email"
                android:orientation="horizontal">
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/usuarios_lu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/texto_negro_to_gris"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/text_user"
                android:layout_toStartOf="@+id/favorito"
                android:layout_toEndOf="@id/icon_email"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                    android:id="@+id/ult_mensaje"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:textColor="@color/texto_grisoscuro_to_grisclaro" />
                <cu.alexgi.youchat.views_GI.ImageViewIconTextGI
                    android:id="@+id/adjunto"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/attach_outline"
                    android:tint="@color/texto_grisoscuro_to_grisclaro"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/usuarios_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/texto_negro_to_gris"
                    android:textSize="@dimen/text_hora"/>
                <cu.alexgi.youchat.views_GI.ImageViewIconTextGI
                    android:id="@+id/view_star"
                    android:layout_width="33dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:padding="4dp"
                    android:src="@drawable/star"/>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="#868c90" />
    </cu.alexgi.youchat.views_GI.LinearLayoutUserGI>
