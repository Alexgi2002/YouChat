<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">
    <cu.alexgi.youchat.views_GI.CardViewDialogGI
        android:id="@+id/mate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margen"
        app:cardCornerRadius="@dimen/spacing_xmedium"
        app:cardBackgroundColor="@color/fondo_blanco"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/img_muestra"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/cal10"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tam_aprox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_margin="2dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_mensaje_fecha"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_marginStart="@dimen/margen"
                android:layout_marginEnd="@dimen/margen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<SeekBar
                    android:id="@+id/seekBar_calidad_img"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:max="100"
                    android:layout_weight="1"/>-->
                <cu.alexgi.youchat.views_GI.SliderGI
                    android:id="@+id/seekBar_calidad_img"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:stepSize="10"
                    android:valueFrom="10"
                    android:valueTo="100"
                    app:labelBehavior="gone"
                    app:haloRadius="0dp"
                    app:thumbElevation="4dp"
                    app:tickColorActive="?attr/colorAccent"
                    app:tickColorInactive="@color/texto_grisoscuro_to_grisclaro"/>
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/text_seek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/texto_negro_to_gris" />
            </LinearLayout>

            <cu.alexgi.youchat.views_GI.TextViewBtnGI
                android:id="@+id/btn_aceptar"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACEPTAR"
                android:textSize="@dimen/size_text_button"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground"
                android:layout_margin="6dp"
                android:textColor="?attr/colorAccent" />
        </LinearLayout>
    </cu.alexgi.youchat.views_GI.CardViewDialogGI>
</RelativeLayout>