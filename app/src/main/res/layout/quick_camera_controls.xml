<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/shutter_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/quick_camera_shutter_ring1"
        android:enabled="false"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/fullscreen_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:tint="#fff"
        android:background="@drawable/deltachat_circle_touch_highlight_background"
        android:src="@drawable/camera_collapse_outline"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/swap_camera_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/deltachat_circle_touch_highlight_background"
        android:src="@drawable/camera_revert2"
        android:enabled="false"
        android:padding="8dp"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>