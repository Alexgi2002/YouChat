<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cu.alexgi.youchat.views_GI.LinearLayoutBarGI
        android:id="@+id/toolbar_seguidores"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout
            android:id="@+id/rl_barra_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <cu.alexgi.youchat.views_GI.ImageViewBarGI
                android:id="@+id/atras_bloqueados"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_left"
                app:tint="@color/texto_negro_to_gris"/>
            <cu.alexgi.youchat.views_GI.TextViewBarGI
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/atras_bloqueados"
                android:text="Usuarios pÃºblicos"
                android:textSize="20sp"
                android:maxLines="1"
                android:textColor="@color/texto_negro_to_gris"/>
            <cu.alexgi.youchat.views_GI.TextViewBarGI
                android:id="@+id/tv_cant_user_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/titulo"
                android:layout_toEndOf="@+id/atras_bloqueados"
                android:text="20 en total"
                android:textSize="14sp"
                android:textColor="@color/texto_negro_to_gris"/>
            <cu.alexgi.youchat.views_GI.ImageViewBarGI
                android:id="@+id/actualizar_user_pub"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/refresh_icon"
                app:tint="@color/texto_negro_to_gris"/>
        </RelativeLayout>
    </cu.alexgi.youchat.views_GI.LinearLayoutBarGI>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_below="@+id/toolbar_seguidores">

        <LinearLayout
            android:id="@+id/ll_usuario_publico_bus_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_filtros"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_item_search"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#000"
                    android:src="@drawable/filter_2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_item_search">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        app:tint="#000"
                        android:src="@drawable/search" />
                    <com.vanniktech.emoji.EmojiEditText
                        android:id="@+id/buscar_usuario_publico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="30dp"
                        android:maxLines="1"
                        android:scrollbars="none"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:background="@color/invisible"
                        android:layout_marginStart="@dimen/margen"
                        android:layout_marginEnd="@dimen/margen"
                        android:layout_gravity="center"
                        android:hint="Buscar..."
                        android:textColorHint="@color/texto_grisoscuro_to_grisclaro"
                        android:textColor="#000"/>
                    <ImageView
                        android:id="@+id/borrar_buscador"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#000"
                        android:src="@drawable/send_error"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lista_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            app:lottie_loop="true"/>

        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
            android:id="@+id/list_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/anim"
            android:text="Nada para mostrar"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/texto_grisoscuro_to_grisclaro"/>

    </RelativeLayout>

    <!--Filtros-->
    <FrameLayout
        android:id="@+id/bsd_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <cu.alexgi.youchat.views_GI.CardViewGI
            android:id="@+id/card_view_filtros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="-3dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margen"
                android:layout_marginEnd="@dimen/margen"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">
                <cu.alexgi.youchat.views_GI.TextViewFontResGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="Filtrar por:"
                    android:textSize="17sp"
                    android:textColor="?attr/colorAccent" />
                <LinearLayout
                    android:id="@+id/ll_genero"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:tint="@color/texto_negro_to_gris"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margen"
                        android:orientation="vertical">
                        <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/texto_grisoscuro_to_grisclaro"
                            android:text="GÃ©nero"/>
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_genero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginStart="@dimen/margen"
                    android:layout_marginEnd="@dimen/margen"
                    android:alpha="0.5"
                    android:background="#868c90" />
                <LinearLayout
                    android:id="@+id/ll_provincia"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:tint="@color/texto_negro_to_gris"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margen"
                        android:orientation="vertical">
                        <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/texto_grisoscuro_to_grisclaro"
                            android:text="Provincia"/>
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_provincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginStart="@dimen/margen"
                    android:layout_marginEnd="@dimen/margen"
                    android:alpha="0.5"
                    android:background="#868c90" />
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:tint="@color/texto_negro_to_gris"
                        android:src="@drawable/location"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margen"
                        android:orientation="vertical">
                        <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/texto_grisoscuro_to_grisclaro"
                            android:text="Rango de edad"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/texto_grisoscuro_to_grisclaro"
                                    android:text="Desde:"/>
                                <cu.alexgi.youchat.views_GI.EditTextFontGenGI
                                    android:id="@+id/tv_edad_desde"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/texto_grisoscuro_to_grisclaro" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/texto_grisoscuro_to_grisclaro"
                                    android:text="Hasta:"/>
                                <cu.alexgi.youchat.views_GI.EditTextFontGenGI
                                    android:id="@+id/tv_edad_hasta"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/texto_grisoscuro_to_grisclaro" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginStart="@dimen/margen"
                    android:layout_marginEnd="@dimen/margen"
                    android:alpha="0.5"
                    android:background="#868c90" />
                <LinearLayout
                    android:id="@+id/option_filtro_cumpleano"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cu.alexgi.youchat.views_GI.ImageViewIconGenGI
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        app:tint="@color/texto_negro_to_gris"
                        android:src="@drawable/option_donar"/>
                    <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margen"
                        android:text="CumpleaÃ±os hoy"
                        android:textColor="@color/texto_negro_to_gris"/>
                    <cu.alexgi.youchat.views_GI.SwitchGI
                        android:id="@+id/switch_filtro_cumpleano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:clickable="false"/>
                </LinearLayout>
            </LinearLayout>
        </cu.alexgi.youchat.views_GI.CardViewGI>
    </FrameLayout>
    <!--Filtros-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>