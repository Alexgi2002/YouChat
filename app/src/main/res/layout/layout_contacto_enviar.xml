<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <cu.alexgi.youchat.CircleImageView
        android:id="@+id/preview_contacto_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:src="@drawable/profile_white"
        app:civ_circle_background_color="@color/image_dialog_preview"/>

        <cu.alexgi.youchat.views_GI.TextViewFontGenGI
            android:id="@+id/contacto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/margen"
            android:paddingEnd="4dp"
            android:layout_toEndOf="@+id/preview_contacto_image"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textColor="@color/texto_negro_to_gris"/>

        <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
            android:id="@+id/contacto_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margen"
            android:paddingEnd="4dp"
            android:layout_toEndOf="@+id/preview_contacto_image"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/contacto_nombre"
            android:maxLines="1"
            android:textColor="@color/texto_grisoscuro_to_grisclaro"
            android:textSize="14sp" />
</RelativeLayout>