<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modalBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/separator"
            android:orientation="horizontal"
            android:layout_width="@dimen/separatorX"
            android:layout_height="@dimen/separatorY"
            android:layout_gravity="center"
            android:background="@drawable/shape_item_search"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margen"
            android:paddingEnd="@dimen/margen">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen"
                android:textColor="@color/texto_negro_to_gris"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"
                android:text="Elige un tema" />

            <LinearLayout
                android:id="@+id/contenedor_lista_estilos_claros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <cu.alexgi.youchat.views_GI.TextViewFontResGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margen"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:text="Temas claros"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista_estilos_claros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedor_lista_estilos_oscuros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <cu.alexgi.youchat.views_GI.TextViewFontResGI
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margen"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:text="Temas oscuros"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista_estilos_oscuros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/list_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="48dp"
                android:text="No tienes tema para compartir"
                android:textSize="18sp"
                android:textColor="@color/texto_grisoscuro_to_grisclaro"/>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>