<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/background_mensaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
                android:id="@+id/lllll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fondo_msg_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="32dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="13dp"
                    app:contentPadding="18dp">

                    <RelativeLayout
                        android:id="@+id/fondo_hora_der"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <com.vanniktech.emoji.EmojiTextView
                            android:id="@+id/mensaje_izq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:linksClickable="true"
                            android:textColorLink="@color/texto_blanco_to_gris"
                            android:autoLink="all"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="26sp" />
                        <TextView
                            android:id="@+id/hora_izq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mensaje_izq"
                            android:layout_alignEnd="@+id/mensaje_izq"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="6dp"
                            android:maxLines="1"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_hora" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
</RelativeLayout>
