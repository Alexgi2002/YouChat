<?xml version="1.0" encoding="utf-8"?>
<cu.alexgi.youchat.views_GI.CardViewDialogGI
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fondo_blanco"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent"
    app:cardElevation="3dp"
    app:contentPadding="8dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/attention"
                app:lottie_autoPlay="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <cu.alexgi.youchat.views_GI.TextViewFontGenGI
                    android:id="@+id/title_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/texto_negro_to_gris"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Â¡Queda poco espacio!"/>
                <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                    android:id="@+id/text_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/texto_grisoscuro_to_grisclaro"
                    android:textSize="14sp"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                android:id="@+id/usado_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="11.2 Gb"
                android:textSize="@dimen/size_text_button"
                android:textColor="@color/texto_grisoscuro_to_grisclaro" />
            <ProgressBar
                android:id="@+id/bar_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:progressTint="?attr/colorAccent"/>
            <cu.alexgi.youchat.views_GI.TextViewFontGenOscuroGI
                android:id="@+id/total_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="14.8 Gb"
                android:textSize="@dimen/size_text_button"
                android:textColor="@color/texto_grisoscuro_to_grisclaro" />
        </LinearLayout>
        <cu.alexgi.youchat.views_GI.TextViewBtnGI
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTENDIDO"
            android:textSize="@dimen/size_text_button"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="8dp"
            android:textColor="?attr/colorAccent" />
    </LinearLayout>
</cu.alexgi.youchat.views_GI.CardViewDialogGI>
